            "stop": {
                "cmd": "/opt/k2fuxi/stop-all.sh"
            }
        }
    },
    {
        "role": "mysql",
        "container": {
            "type": "kvm",
            "image": "img-kpl9rexp",
            "zone": "pek3a"
        },
        "count": {{cluster.mysql.count}},
        "cpu": {{cluster.mysql.cpu}},
        "memory": {{cluster.mysql.memory}},
        "instance_class": {{cluster.mysql.instance_class}}
    },
    {
        "role": "elasticsearch",
        "container": {
            "type": "kvm",
            "image": "img-z6ce900v",
            "zone": "pek3a"
        },
