        "memory": {{cluster.elasticsearch.memory}},
        "instance_class": {{cluster.elasticsearch.instance_class}},
        "services": {
            "start": {
                "order": 3,
                "cmd": "/opt/k2fuxi/start.sh"
            },
            "stop": {
                "cmd": "/opt/k2fuxi/stop.sh"
            }
        }
    }]
