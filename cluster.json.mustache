    "name": {{cluster.name}},
    "description": {{cluster.description}},
    "vxnet": {{cluster.vxnet}},
    "nodes": [{
        "role": "front",
        "container": {
            "type": "kvm",
            "image": "img-llny5dg7",
            "zone": "pek3a"
        },
        "cpu": {{cluster.front.cpu}},
        "memory": {{cluster.front.memory}},
        "instance_class": {{cluster.front.instance_class}},
        "count": {{cluster.front.count}},
        "services": {
            "start": {
                "order": 3,
                "cmd": "/opt/k2fuxi/start-all.sh"
